#!/bin/bash

set -euo pipefail
IFS=

rulesdir=/opt/chj/chjize/rules

usage () {
    echo "$0 command [ args ]"
    echo "  run command from $rulesdir with proper env"
    exit 1
}

command=$1
shift


source /opt/chj/chjize/bin/chj-env.bash

xcheck_location /opt/chj/chjize/bin/chjize

set -x

"$rulesdir"/"$command" "$@"

if [ "$(pwd)" = "/opt/chj/chjize" ]; then
    touch "$command"
fi
