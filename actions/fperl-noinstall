fi

(
set -euo pipefail
set -x
cd functional-perl

checkout-latest-release -v -p '^v(\d+\.\d+\.\d+)$' ">=" "v0.72.43"

#perl Makefile.PL
#make install
# No, this is now done in fperl-install target.
